
<% if can? :manage, Patient%>
<div class="flex items-center justify-center h-screen mt-0">
  <div class="w-full max-w-sm">
    <h2 class="text-2xl font-bold mb-4">Edit Patient</h2>

    <%= form_for @patient, html: {class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"} do |f| %>
      <% if @patient.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

          <ul>
            <% @patient.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :first_name, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_field :first_name, autofocus: true, class: "w-full p-2 border border-gray-300 rounded" %>
      </div>

      <div class="mb-4">
        <%= f.label :last_name, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_field :last_name, autofocus: true, class: "w-full p-2 border border-gray-300 rounded" %>
      </div>

      <div class="mb-4">
        <%= f.label :phone, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.text_field :phone, autofocus: true, class: "w-full p-2 border border-gray-300 rounded" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-semibold mb-2" %>
        <%= f.email_field :email, autofocus: true, class: "w-full p-2 border border-gray-300 rounded" %>
      </div>

      <div class="flex items-center justify-between">
        <div class="mb-4">
          <%= f.submit "Update", class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
        </div>
      </div>
      <%= link_to '< back to profile', @patient %>
    <% end %>
  </div>
</div>
<% end %>